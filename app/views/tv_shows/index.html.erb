<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 text-info">Series & movies</h1>
            <p class="lead text-secondary">Welcome!!!</p>
                <div class="container">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                          <div class="btn btn-light">
                            <%= link_to 'Home', welcome_path %>
                        </div>
                        <div class="btn btn-light">
                            <%= link_to 'Tv Shows', tv_shows_path %>
                        </div>
                        <button type="button" class="btn btn-light">Series</button>
                        <button type="button" class="btn btn-light">Movies</button>
                        <button type="button" class="btn btn-light">About</button>
                    </nav>
                </div>              
        </div>
  </div>
  <hr>

<p id="notice"><%= notice %></p>

<h1>Tv Shows</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Summary</th>
      <th>Release date</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tv_shows.each do |tv_show| %>
      <tr>
        <td><%= tv_show.name %></td>
        <td><%= tv_show.summary %></td>
        <td><%= tv_show.release_date %></td>
        <td><%= tv_show.rating %></td>
        <td><%= link_to 'Show', tv_show %></td>
        <td><%= link_to 'Edit', edit_tv_show_path(tv_show) %></td>
        <td><%= link_to 'Destroy', tv_show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tv Show', new_tv_show_path %>
<%= link_to 'Back', welcome_path %>
